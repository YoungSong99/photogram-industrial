<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">User Sign In</h5>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mb-3' }) do |f| %>
          <div class="form-group mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control', autocomplete: 'email' }, label: false %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.input :password, required: true, input_html: { class: 'form-control', autocomplete: 'current-password' }, label: false %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>
          <% end %>

          <div class="form-actions">
            <%= f.button :submit, "Sign in", class: 'btn btn-outline-primary w-100' %>
          </div>

          <hr>
          <div class="devise-links">
            <%= render "devise/shared/links" %>
          </div>

      <% end %>
      </div>
    </div>
  </div>
</div>

