<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><%= title %></h5>
        <span class="badge text-bg-primary rounded-pill"><%= users.count %></span>
      </li>
      <% users.each do |user| %>
        <li class="list-group-item">
          <%= link_to user.username, user_path(user.username), style: "text-decoration: none;" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>